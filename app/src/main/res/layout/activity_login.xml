<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.kaeuc.finalproject.login"
    android:background="@android:color/background_light">

    <TextView
        android:text="Login"
        android:id="@+id/txt_login"

        android:layout_marginTop="30px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35dp"
        android:textColor="#8A9B0F"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:id="@+id/txt_email"
        android:layout_marginTop="55dp"
        android:textSize="20dp"
        android:layout_below="@+id/txt_login"
        android:layout_alignStart="@+id/edt_createUsername"
        android:textColor="#8A9B0F"
        android:textStyle="bold"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/edt_Username"
        android:layout_below="@+id/txt_email"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:id="@+id/txt_password"
        android:textSize="20dp"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/edt_Password"
        android:textColor="#8A9B0F"
        android:textStyle="bold"
    />

    <EditText
        android:id="@+id/edt_Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/txt_password"
        android:layout_alignEnd="@+id/edt_Username"
        android:layout_alignParentStart="true"
    />

    <Button

        android:text="Login"
        android:id="@+id/btn_login"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:background="@drawable/mybutton"
        android:textStyle="bold"

        android:layout_marginTop="66dp"
        android:layout_below="@+id/edt_Password"
        android:layout_alignStart="@+id/btn_createProfile" />

    <Button

        android:text="Create Profile"
        android:id="@+id/btn_createProfile"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:background="@drawable/mybutton"
        android:textStyle="bold"

        android:layout_below="@+id/btn_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

</RelativeLayout>
